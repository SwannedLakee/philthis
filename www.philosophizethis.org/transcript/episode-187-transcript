                  &quot;borderOptions&quot;: {
                    &quot;enabled&quot;: false,
                    &quot;position&quot;: &quot;bottom&quot;,
                    &quot;thickness&quot;: {
                      &quot;unit&quot;: &quot;px&quot;,
                      &quot;value&quot;: 4.0
