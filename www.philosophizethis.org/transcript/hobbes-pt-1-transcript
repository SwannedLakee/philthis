        &quot;sitePaletteColor&quot;: {
          &quot;colorName&quot;: &quot;black&quot;,
          &quot;alphaModifier&quot;: 1.0
        }
      }
    },
    &quot;dropShadowOptions&quot;: {
      &quot;enabled&quot;: false,
      &quot;blur&quot;: {
        &quot;unit&quot;: &quot;px&quot;,
